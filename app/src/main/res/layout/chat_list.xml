<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/from_message_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/message_from"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="50dip"
            android:background="@drawable/chat_two"
            android:gravity="center_vertical"
            android:minHeight="50dip"
            android:padding="10dip"
            android:text="hi,this is test"
            android:textColor="@color/colorTextBlack"
            android:textSize="16sp" />


    </LinearLayout>

    <TextView
        android:id="@+id/from_msg_posted_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="12-234"
        android:textSize="12sp"
        android:visibility="gone" />


    <LinearLayout
        android:id="@+id/my_message_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="vertical">

        <TextView

            android:id="@+id/my_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="50dip"
            android:background="@drawable/chat_one"
            android:gravity="right"
            android:padding="10dp"
            android:text="Hi,this is test"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />


    </LinearLayout>

    <TextView
        android:id="@+id/my_msg_posted_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="10dp"
        android:text="122555585"
        android:textSize="12sp"
        android:visibility="gone" />

</LinearLayout>


