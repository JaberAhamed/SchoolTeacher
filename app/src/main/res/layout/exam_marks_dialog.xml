<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/shadow"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:minWidth="300dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/studentFullName"
            android:text=""
            android:padding="10dp"
            android:textSize="20sp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <TextView

                android:text="Exam:"
                android:textStyle="bold"
                android:padding="5dp"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/studentExamName"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text=""
                android:padding="5dp"
                android:textSize="18sp"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:id="@+id/contact_phone_layout"
            android:layout_height="wrap_content">

            <TextView

                android:text="Class:"
                android:textStyle="bold"
                android:padding="5dp"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/studentClassName"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text=""
                android:padding="5dp"
                android:textSize="18sp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <TextView

                android:text="Roll:"
                android:textStyle="bold"
                android:padding="5dp"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/studentRollNo"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text=""
                android:padding="5dp"
                android:textSize="18sp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <TextView

                android:text="Obtained Marks:"
                android:textStyle="bold"
                android:padding="5dp"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/studentObtainedMarks"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text=""
                android:inputType="numberDecimal"
                android:padding="5dp"
                android:textSize="18sp"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <TextView

                android:text="Exam Marks:"
                android:textStyle="bold"
                android:padding="5dp"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/studentExamMarks"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:inputType="numberDecimal"
                android:text=""
                android:padding="5dp"
                android:textSize="18sp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <TextView

                android:text="Comments:"
                android:textStyle="bold"
                android:padding="5dp"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/studentRemarks"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:inputType="textMultiLine"
                android:text=""
                android:padding="5dp"
                android:textSize="18sp"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:text="Cancel"
            android:id="@+id/cancelMarksButton"
            android:layout_margin="5dip"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:background="@color/cancelButtonColor"
            android:textColor="@color/generalButtonTextColor"
            />

        <Button
            android:text="Update"
            android:id="@+id/saveMarksButton"
            android:layout_margin="5dip"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:background="@color/colorPaste"
            android:textColor="@color/generalButtonTextColor"
            />
    </LinearLayout>

</LinearLayout>