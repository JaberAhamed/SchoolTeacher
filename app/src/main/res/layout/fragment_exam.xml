<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.ExamFragment">

    <!-- TODO: Update blank fragment layout -->

    <Spinner
        android:background="@drawable/shadow_spinner"
        android:id="@+id/groupInfoExSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:layout_margin="5dip"
        />

    <Spinner
        android:visibility="gone"
        android:background="@drawable/shadow_spinner"
        android:id="@+id/groupExamSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:layout_margin="5dip"
        />
    <LinearLayout
        android:id="@+id/examMarksLayout"
        android:padding="10dp"
        android:layout_margin="2dip"
        android:background="@drawable/shadow"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/colorPrimaryDark"
            android:text="Exam Marks: "
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />
        <TextView
            android:id="@+id/examMarksTextView"
            android:paddingLeft="15dip"
            android:textColor="@color/colorPrimaryDark"
            android:text=""
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/examDateTextView"
            android:paddingLeft="20dip"
            android:textColor="@color/colorPrimaryDark"
            android:text="( Date: )"
            android:layout_gravity="right"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />



    </LinearLayout>

    <ListView
        android:descendantFocusability="beforeDescendants"
        android:visibility="gone"
        android:layout_margin="2dip"
        android:id="@+id/exam_list_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@null"
        android:listSelector="@drawable/list_row_selector" />

    <Button
        android:visibility="gone"
        android:id="@+id/submitExamButton"
        android:layout_gravity="center"
        android:text="Save"
        android:textColor="#ffffff"
        android:backgroundTint="@color/colorPrimary"
        android:background="@color/colorPrimary"
        android:layout_margin="10dip"
        android:layout_width="200dip"
        android:layout_height="wrap_content" />

</LinearLayout>