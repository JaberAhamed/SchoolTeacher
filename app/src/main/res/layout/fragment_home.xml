<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="180dip">
        <ImageView
            android:layout_weight="1"
            android:src="@drawable/banner_image_one"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"/>


    </LinearLayout>
    <LinearLayout
        android:layout_margin="4dip"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <LinearLayout
                android:background="@drawable/shadow"
                android:id="@+id/attendance_layout"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:layout_margin="1dip"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_weight="1">

                <ImageView

                    app:srcCompat="@drawable/ic_attendence_icon"
                    android:id="@+id/attendance_image"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="5dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:tint="@color/colorPrimary"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/attendance_text_view"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="@string/attendance_text"
                    android:textSize="16sp"
                    android:padding="6dp"
                    android:textColor="@color/white"
                    android:background="@drawable/shadow_primary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:background="@drawable/shadow"
                android:id="@+id/members_layout"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:layout_margin="1dip"
                android:layout_weight="1">

                <ImageView
                    app:srcCompat="@drawable/ic_members"
                    android:id="@+id/members_image"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="5dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:tint="@color/colorPrimary"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/members_text_view"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="@string/members_text"
                    android:textSize="16sp"
                    android:padding="6dip"
                    android:textColor="@color/white"
                    android:background="@drawable/shadow_primary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <LinearLayout
                android:background="@drawable/shadow"
                android:id="@+id/all_notice_layout"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:layout_margin="1dip"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"

                    >
                    <ImageView

                        app:srcCompat="@drawable/ic_notices"
                        android:id="@+id/all_notice_image1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:tint="@color/colorPrimary"/>


                    <!--<ImageView
                        android:id="@+id/all_notice_image1"
                        android:layout_width="71dp"
                        android:layout_height="42dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/new_notification"
                        android:visibility="invisible"
                        android:layout_alignParentRight="true" />-->


                </RelativeLayout>

                <TextView
                    android:id="@+id/all_notice_text_view"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="@string/all_notice_text"
                    android:textSize="16sp"
                    android:padding="6dip"
                    android:textColor="@color/white"
                    android:background="@drawable/shadow_primary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:background="@drawable/shadow"
                android:id="@+id/exams_layout"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:layout_margin="1dip"
                android:layout_weight="1">

                <ImageView
                    app:srcCompat="@drawable/ic_statistics"
                    android:id="@+id/exams_image"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="5dip"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:tint="@color/colorPrimary"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/statistics_text_view"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="@string/exams_text"
                    android:textSize="16sp"
                    android:padding="6dip"
                    android:textColor="@color/white"
                    android:background="@drawable/shadow_primary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

    <TextView
        android:id="@+id/banner_image_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorWhite"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:fadingEdge="horizontal"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:layout_alignParentRight="true"
        android:padding="6dip"
        android:text="@string/footer_text"
        tools:text="@string/footer_text" />



</LinearLayout>